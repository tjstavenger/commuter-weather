<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<servlet>
		<servlet-name>daily</servlet-name>
		<servlet-class>com.google.code.commuterweather.proxy.DailyProxy</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>hourly</servlet-name>
		<servlet-class>com.google.code.commuterweather.proxy.HourlyProxy</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
        <servlet-name>daily</servlet-name>
        <url-pattern>/daily</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
        <servlet-name>hourly</servlet-name>
        <url-pattern>/hourly</url-pattern>
    </servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
